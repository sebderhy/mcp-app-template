{
  "name": "mcp-app-template",
  "version": "1.0.0",
  "description": "Boilerplate for building MCP Apps with Python server and React widgets. Works with Claude, ChatGPT, VS Code, Goose, and any MCP Apps host.",
  "main": "src/boilerplate/index.tsx",
  "type": "module",
  "scripts": {
    "build": "tsx ./build-all.mts",
    "build:if-needed": "tsx ./scripts/build-if-needed.mts",
    "serve": "serve -s ./assets -p 4444 --cors",
    "dev": "vite --config vite.config.mts",
    "tsc": "tsc -b",
    "tsc:app": "tsc -p tsconfig.app.json",
    "tsc:node": "tsc -p tsconfig.node.json",
    "server": "cd server && .venv/bin/python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload",
    "test": "pnpm run build:if-needed && pnpm run test:server && pnpm run test:ui",
    "test:server": "cd server && .venv/bin/python -m pytest",
    "test:server:cov": "cd server && .venv/bin/python -m pytest --cov=. --cov-report=term-missing",
    "test:ui": "vitest run",
    "test:ui:watch": "vitest",
    "test:ui:cov": "vitest run --coverage",
    "test:browser": "npx playwright test",
    "test:all": "pnpm run build:if-needed && pnpm run test:server && pnpm run test:ui && pnpm run test:browser",
    "test:cov": "pnpm run test:server:cov && pnpm run test:ui:cov",
    "setup:test": "npx playwright install chromium",
    "ui-test": "tsx scripts/ui-test.ts"
  },
  "keywords": [
    "mcp",
    "mcp-apps",
    "model-context-protocol",
    "claude",
    "chatgpt",
    "widgets"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.3.0",
    "@types/react-datepicker": "^7.0.0",
    "@types/three": "^0.182.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "10.4.21",
    "fast-glob": "^3.3.3",
    "happy-dom": "^18.0.1",
    "postcss": "8.5.6",
    "serve": "^14.2.4",
    "tailwindcss": "4.1.11",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@openai/apps-sdk-ui": "^0.2.1",
    "@react-spring/three": "^10.0.3",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.4.2",
    "@react-three/postprocessing": "^3.0.4",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "chart.js": "^4.5.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.536.0",
    "react": "^19.1.1",
    "react-datepicker": "^9.0.0",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.10.1",
    "three": "^0.182.0"
  }
}
